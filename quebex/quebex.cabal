common warnings
    ghc-options: -Wall

library
    import:           warnings
    -- other-modules:
    hs-source-dirs:   src
    default-language: GHC2021

    build-depends:
      base ^>=4.19.1.0,
      array,
      template-haskell,
      quebex-syntax,
      containers,
      mtl

    exposed-modules:
      Language.QBE.Simulator,
      Language.QBE.Simulator.State,
      Language.QBE.Simulator.Generator,
      Language.QBE.Simulator.Expression,
      Language.QBE.Simulator.Error,
      Language.QBE.Simulator.Memory

test-suite quebex-test
    import:           warnings
    default-language: GHC2021
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs

    other-modules:
      Simulator,
      Memory

    build-depends:
        base ^>=4.19.1.0,
        parsec,
        quebex,
        quebex-syntax,
        containers,
        tasty        >=1.4.3,
        tasty-hunit  >=0.10
